rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // User data - only owner can read/write
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Recipes collection
      match /recipes/{recipeId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId) && 
                         request.resource.data.keys().hasAll(['id', 'createdAt']);
      }
      
      // Cooking sessions collection
      match /cookingSessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
      
      // Cooking diary collection
      match /cookingDiary/{entryId} {
        allow read, write: if isOwner(userId);
        allow create: if isOwner(userId) && 
                         request.resource.data.keys().hasAll(['id', 'userId', 'timestamp']);
      }
    }
  }
}
